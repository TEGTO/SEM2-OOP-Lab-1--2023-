<Window x:Class="OOP_Lab_1.UnitTests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Lab_1"
        mc:Ignorable="d"
        Title="UnitTests" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Height="40" Width="120" Content="Sort Test" Margin="50,70,0,0" HorizontalAlignment="Left" Background="White" BorderBrush="Black" FontSize="17" FontWeight="Bold" Click="ButtonSortTest_Click"/>
        </StackPanel>
        <StackPanel>
            <Button Height="40" Width="120" Content="Figures Test" Margin="50,120,0,0" HorizontalAlignment="Left" Background="White" BorderBrush="Black" FontSize="17" FontWeight="Bold"/>
        </StackPanel>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="244,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="383" Height="111" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Visible" IsReadOnly="True" FontWeight="Bold" FontSize="15" FontFamily="Arial" Background="{x:Null}" />
    </Grid>
</Window>
